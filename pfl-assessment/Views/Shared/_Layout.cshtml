@using pfl_assessment.Models.Json.Orders;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PFL Assessment</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("PFL Assessment", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse">
                <div class="navbar-nav">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-item nav-link" })
                    @Html.ActionLink("Store", "Index", "Store", null, new { @class = "nav-item nav-link" })
                    @{
                        string cartPill = "";
                    }
                    @if (Session["cart"] != null && Session["cart"] is List<Item>)
                    {
                        int count = ((List<Item>)Session["cart"]).Count;
                        if (count > 0)
                        {
                            cartPill = "<span class=\"badge badge-pill badge-light\">" + count + "</span>";
                        }
                    }
                    <a href="@Url.Action("Index", "Cart")" class="nav-item nav-link">Cart @Html.Raw(@cartPill)</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Trevor Brooks for PFL Assessment</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
